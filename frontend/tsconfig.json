{
    "compilerOptions": {
      "outDir": "./dist",
      "module": "ES6",
      "target": "ES5",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "rootDir": "./src"
    },
    "include": ["src/**/*"]
}
  